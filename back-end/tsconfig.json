{
  "compilerOptions": {
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/vitest/dist/index.d.ts",
      "./src/types"
    ],
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "tests/**/*", "node_modules/vitest/dist/index.d.ts"],
  "exclude": ["node_modules", "dist"]
}
